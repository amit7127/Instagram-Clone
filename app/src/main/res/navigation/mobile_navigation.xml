<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.android.amit.instaclone.view.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.android.amit.instaclone.view.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.android.amit.instaclone.view.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_acountSettingsActivity"
            app:destination="@id/acountSettingsActivity" />
    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.android.amit.instaclone.view.notification.NotificationFragment"
        android:label="notification_fragment"
        tools:layout="@layout/notification_fragment" />
    <activity
        android:id="@+id/acountSettingsActivity"
        android:name="com.android.amit.instaclone.view.acountsettings.AcountSettingsActivity"
        android:label="activity_acount_settings"
        tools:layout="@layout/activity_acount_settings" />
</navigation>
